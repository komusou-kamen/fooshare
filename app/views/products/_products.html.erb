<ul class="list-unstyled">
  <% products.each do |product| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= image_tag product.image.variant(resize:'300x300').processed %>
          <p><%= link_to product.name, product %></p>
          <p><%= product.price %></p>
          <p><%= product.user.name %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate products %>
</ul>