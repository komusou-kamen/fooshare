<h1>ユーザー情報編集ページ</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name, 'お名前' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>
  <%= f.label :phone, '電話番号' %>
  <%= f.text_field :phone %>
  <%= f.label :address, 'ご住所' %>
  <%= f.text_field :address %>
  <%= f.label :introduce, '自己紹介文' %>
  <%= f.text_field :introduce %>

  <%= f.submit '編集を完了する' %>
<% end %>